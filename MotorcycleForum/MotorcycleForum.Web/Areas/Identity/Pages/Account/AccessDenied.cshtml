@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container py-5 animate__animated animate__fadeInUp">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center p-5">
                    <i class="bi bi-shield-lock text-warning display-3 mb-4"></i>
                    <h1 class="text-dark fw-bold">Access Denied</h1>
                    <p class="text-muted lead">You do not have permission to view this page or perform this action.</p>

                    <div class="mt-4">
                        <a href="/" class="btn btn-outline-dark">
                            <i class="bi bi-house-door me-2"></i>Return to Home
                        </a>
                        <a href="/Identity/Account/Login" class="btn btn-danger ms-2">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
