@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm Email";
}

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="card p-5 rounded-5 shadow-lg"
         style="background: rgba(0, 0, 0, 0.85); max-width: 600px; width: 100%; border: none;">
        <h1 class="text-center text-light display-4 font-weight-bold mb-4">@ViewData["Title"]</h1>

        <div class="text-light mb-4 fs-5 text-center">
            <partial name="_StatusMessage" model="Model.StatusMessage" />
        </div>

        <form method="post" class="text-center">
            <input type="hidden" asp-for="UserId" />
            <button type="submit" class="btn btn-light text-dark rounded-pill py-2 px-4">
                Continue
            </button>
        </form>
    </div>
</div>

<style>
    .btn{
        background-color: white !important;
        font-weight: 500 !important;
    }
</style>