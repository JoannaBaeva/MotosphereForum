@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Password Reset Successful";
}

<div class="py-5 container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="bg-white p-5 animate__animated animate__fadeIn rounded text-center shadow-lg">
                <h2 class="fw-bold text-dark mb-4">✅ Password Reset Successful!</h2>
                <p class="text-muted mb-4">
                    Your password has been reset successfully. You can now log in with your new credentials.
                </p>
                <a asp-page="./Login" class="btn fw-bold px-4 py-2" style="background-color: #d81324; color: white; font-size: 1.1rem;">
                    <i class="bi bi-box-arrow-in-right me-2"></i> Go to Login
                </a>
            </div>
        </div>
    </div>
</div>