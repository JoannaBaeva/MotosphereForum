@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register Confirmation";
}

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="card p-5 rounded-5 shadow-lg text-light" style="background: rgba(0, 0, 0, 0.85); max-width: 600px; width: 100%; border: none;">
        <div class="text-center mb-4">
            <h1 class="display-5 fw-bold">@ViewData["Title"]</h1>
        </div>
        <hr class="text-light opacity-50 mb-4" />

        <div class="alert alert-success border-success">
            <p>Please check your email to confirm your account.</p>
            <p class="mb-0">If you don’t see the email, be sure to check your spam or junk folder.</p>
        </div>

        <div class="text-center mt-4">
            <a href="/" class="btn btn-outline-light rounded-pill px-4 py-2 fw-bold">Return to Home</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
