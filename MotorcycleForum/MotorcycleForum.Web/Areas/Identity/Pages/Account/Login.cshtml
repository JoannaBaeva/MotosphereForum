@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="card p-5 rounded-5 shadow-lg" style="background: rgba(0, 0, 0, 0.8); max-width: 500px; width: 100%; border: none;">
        <h1 class="text-center text-light display-4 font-weight-bold">@ViewData["Title"]</h1>

        <form id="account" method="post" class="mt-4">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control bg-dark text-light border-0 shadow-sm rounded-3" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="text-light">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 position-relative">
                <input asp-for="Input.Password" type="password" class="form-control bg-dark text-light border-0 shadow-sm rounded-3" placeholder="password" id="passwordInput" />
                <label asp-for="Input.Password" class="text-light">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <button type="button"
                        class="btn btn-sm position-absolute top-50 end-0 translate-middle-y me-3 text-light"
                        onclick="togglePasswordVisibility('passwordInput', this)"
                        style="z-index: 10; background: none; border: none;">
                    <i class="bi bi-eye"></i>
                </button>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMe" />
                <label class="form-check-label text-light" for="rememberMe">Remember Me</label>
            </div>

            <button type="submit" class="btn btn-gradient w-100 py-2 rounded-pill shadow-lg">Log in</button>
        </form>

        <div class="text-center mt-3">
            <a asp-page="./ForgotPassword" class="text-light">Forgot your password?</a> |
            <a asp-page="./Register" class="text-light">Register</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    function togglePasswordVisibility(inputId, button) {
        const input = document.getElementById(inputId);
        const icon = button.querySelector('i');

        if (input.type === "password") {
            input.type = "text";
            icon.classList.remove("bi-eye");
            icon.classList.add("bi-eye-slash");
        } else {
            input.type = "password";
            icon.classList.remove("bi-eye-slash");
            icon.classList.add("bi-eye");
        }
    }
</script>
