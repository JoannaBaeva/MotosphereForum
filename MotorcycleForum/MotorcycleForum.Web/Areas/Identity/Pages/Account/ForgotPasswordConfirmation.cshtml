@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container py-5">
    <div class="bg-white rounded shadow-sm p-5 text-center animate__animated animate__fadeIn">
        <h2 class="text-dark fw-bold mb-4">
            📧 Check Your Email
        </h2>
        <p class="text-muted fs-5">
            We've sent you a link to reset your password. Please check your email inbox.
        </p>
        <a href="/" class="btn btn-outline-dark mt-4">
            <i class="bi bi-house-door"></i> Back to Home
        </a>
    </div>
</div>
