@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="container vh-100 d-flex justify-content-center">
    <div class="card p-5 rounded-5 shadow-lg" style="background: rgba(0, 0, 0, 0.85); max-width: 600px; width: 100%; border: none;">
        <h3 class="text-center text-white mb-4">@ViewData["Title"]</h3>
        <partial name="_StatusMessage" for="StatusMessage" />

        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.OldPassword" class="form-control bg-dark text-light border-secondary" autocomplete="current-password" aria-required="true" placeholder="Current password" />
                <label asp-for="Input.OldPassword" class="text-secondary"></label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control bg-dark text-light border-secondary" autocomplete="new-password" aria-required="true" placeholder="New password" />
                <label asp-for="Input.NewPassword" class="text-secondary"></label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                <div class="form-text text-light">Password must be at least 8 characters long, contain a number, and a special character.</div>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control bg-dark text-light border-secondary" autocomplete="new-password" aria-required="true" placeholder="Confirm password" />
                <label asp-for="Input.ConfirmPassword" class="text-secondary"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-gradient w-100 py-2 rounded-pill shadow">Update Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .btn-gradient {
        background: linear-gradient(135deg, #d81324 0%, #ff6a00 100%);
        color: white;
        font-weight: bold;
        border: none;
    }

        .btn-gradient:hover {
            background: linear-gradient(135deg, #ff6a00 0%, #d81324 100%);
        }

    .form-control:disabled {
        background-color: #333;
        opacity: 1;
    }
</style>
