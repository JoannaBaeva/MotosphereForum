@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="card p-5 rounded-5 shadow-lg" style="background: rgba(0, 0, 0, 0.8); max-width: 900px; width: 100%; border: none;">
        <h1 class="text-center text-light display-4 font-weight-bold">Manage Your Account</h1>
        <hr class="text-light mb-4" />

        <div class="row">
            <!-- Navigation Sidebar -->
            <div class="col-md-3">
                <partial name="_ManageNav" />
            </div>

            <!-- Main Content -->
            <div class="col-md-9">
                <h2 class="text-light mb-4" style="margin: 5px;">Change Your Account Settings</h2>
                <hr class="text-light mb-4" />
                @RenderBody()
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:disabled {
        background-color: #333;
        opacity: 1;
    }
</style>
@section Scripts {
    @RenderSection("Scripts", required: false)
}
