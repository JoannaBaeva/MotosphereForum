@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="container-fluid py-5">
    <div class="container">
        <div class="card p-5 rounded-5 shadow-lg" style="background: rgba(0, 0, 0, 0.85); border: none;">
            <h1 class="text-center text-light display-4 font-weight-bold">Manage Your Account</h1>
            <hr class="text-light mb-5" />

            <div class="row">
                <!-- Navigation Sidebar -->
                <div class="col-lg-3 mb-4 mb-lg-0">
                    <partial name="_ManageNav" />
                </div>

                <!-- Main Content -->
                <div class="col-lg-9">
                    <h2 class="text-light mb-4" style="margin: 5px;">Change Your Account Settings</h2>
                    <hr class="text-light mb-4" />
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:disabled {
        background-color: #333;
        opacity: 1;
    }
</style>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
