@model MotorcycleForum.Services.Models.ErrorViewModel
@{
    ViewData["Title"] = "Unexpected Error";
}

<div class="py-5 container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="bg-white p-5 animate__animated animate__fadeIn rounded border-0 text-center shadow-sm">
                <i class="bi bi-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                <h1 class="display-4 text-danger mt-3 fw-bold">Oops! Something went wrong.</h1>
                <p class="lead text-muted mb-4">
                    An unexpected error occurred while processing your request.
                </p>

                @if (Model.ShowRequestId)
                {
                    <p class="text-muted">
                        <strong>Request ID:</strong> <code>@Model.RequestId</code>
                    </p>
                }

                <a href="/" class="btn btn-outline-dark mt-3 px-4">
                    <i class="bi bi-arrow-left-circle me-2"></i>Return to Home
                </a>
            </div>
        </div>
    </div>
</div>
