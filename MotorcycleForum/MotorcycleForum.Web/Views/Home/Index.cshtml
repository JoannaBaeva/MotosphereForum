@{
    ViewData["Title"] = "Home";
}

<!-- Include animate.css in the head section of your layout (_Layout.cshtml) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<!-- Hero Section -->
<section class="hero bg-dark text-white py-5 position-relative text-center" style="background: linear-gradient(rgba(255,255,255,0.1), rgba(255,255,255,0.1)), url('../assets/img/header2.jpg'); background-size: cover; background-position: center;">
    <div class="container">
        <div class="hero-content animate__animated animate__fadeInUp">
            <h1 class="display-3 fw-bold" style="color: white;">Welcome to MotorcycleForum</h1>
            <p class="lead mb-4" style="color: white;">Connecting motorcyclists worldwide. Discover events, join discussions, and find your next ride partner.</p>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg">Join the Community</a>
        </div>
    </div>
</section>



<!-- Introduction Section with fadeInUp animation -->
<section class="intro py-5 animate__animated animate__fadeInUp text-center" style="background-color: var(--light);">
    <div class="container">
        <h2 class="fw-medium">What is MotorcycleForum?</h2>
        <p class="lead text-secondary">MotoNet is a social network where motorcyclists can connect, share experiences, and explore events around the world.</p>
    </div>
</section>

<!-- Featured Events Section -->
<section class="featured-events py-5">
    <div class="container">
        <!-- Animated section title -->
        <h3 class="fw-medium animate__animated animate__fadeInDown text-center" style="color: var(--secondary);">Upcoming Events</h3>
        <div class="row">
            <!-- Example Event Card with zoomIn animation -->
            <div class="col-md-4 mb-4 animate__animated animate__zoomIn">
                <div class="card border-0 shadow-sm">
                    <img class="card-img-top" src="event-image1.jpg" alt="Event Image">
                    <div class="card-body">
                        <h5 class="card-title fw-medium">Rally Ride 2024</h5>
                        <p class="card-text">Date: March 15, 2024</p>
                        <p class="card-text">Location: New York City</p>
                        <a href="/Events/Details/1" class="btn btn-secondary btn-block">Join Now</a>
                    </div>
                </div>
            </div>
            <!-- Repeat event cards as needed -->
        </div>
    </div>
</section>

<!-- Marketplace Section with fadeInUp animation -->
<section class="marketplace py-5 animate__animated animate__fadeInUp" style="background-color: var(--light);">
    <div class="container">
        <h3 class="fw-medium text-center" style="color: var(--secondary);">Marketplace</h3>
        <div class="row">
            <!-- Example Sale Post Card with zoomIn animation -->
            <div class="col-md-3 mb-4 animate__animated animate__zoomIn">
                <div class="card border-0 shadow-sm">
                    <img class="card-img-top" src="motorcycle1.jpg" alt="Motorcycle for Sale">
                    <div class="card-body">
                        <h5 class="card-title fw-medium">2023 Harley Davidson</h5>
                        <p class="card-text">Price: $12,000</p>
                        <a href="/Sale/Details/1" class="btn btn-primary btn-block">View Item</a>
                    </div>
                </div>
            </div>
            <!-- Repeat sale post cards as needed -->
        </div>
    </div>
</section>

<!-- Forum Section -->
<section class="forum-section py-5">
    <div class="container">
        <!-- Animated forum title with fadeInDown animation -->
        <h3 class="fw-medium animate__animated animate__fadeInDown text-center" style="color: var(--secondary);">Trending Discussions</h3>
        <!-- Forum list with fadeInUp animation -->
        <div class="list-group animate__animated animate__fadeInUp shadow-sm">
            <a href="/Forum/Topic/1" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                <h5>Best Routes for Spring Rides</h5>
                <span class="badge badge-primary badge-pill">Hot</span>
            </a>
            <!-- Repeat list items for other trending topics -->
        </div>
        <div class="mt-3 text-center">
            <a class="btn btn-secondary animate__animated animate__bounceIn" href="/Forum">Join the Discussion</a>
        </div>
    </div>
</section>

<!-- Call-to-Action Section with fadeInUp and heartBeat animations -->
<section class="cta text-white py-5 animate__animated animate__fadeInUp text-center" style="background-color: var(--primary);">
    <div class="container">
        <h4 class="fw-medium">Ready to join the MotoNet community?</h4>
        <p>Connect with fellow riders, explore events, and make new friends.</p>
        <a class="btn btn-light btn-lg animate__animated animate__heartBeat" href="/Account/Register">Sign Up Today</a>
    </div>
</section>
