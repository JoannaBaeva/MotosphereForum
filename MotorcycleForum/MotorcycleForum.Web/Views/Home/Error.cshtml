@{
    Layout = "_Layout";
    ViewData["Title"] = "Oops! An error occurred";
}

<div class="container py-5 d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-5 bg-white text-center animate__animated animate__fadeIn" style="max-width: 600px; width: 100%;">
        <h1 class="display-5 fw-bold text-danger">Oops!</h1>
        <h4 class="fw-semibold text-dark mb-3">Something went wrong</h4>
        <p class="text-muted fs-5">We couldn’t process your request right now. Please try again later or contact support if the issue continues.</p>

        <a href="/" class="btn btn-outline-dark mt-3 px-4 py-2">
            <i class="bi bi-arrow-left me-2"></i>Return Home
        </a>
    </div>
</div>
