<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MotorcycleForum</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@600;700&family=Ubuntu:wght@400;500&display=swap" rel="stylesheet">

    <!-- Font Awesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Animate.css (with href fixed) -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">

    <!-- Owl Carousel CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.css">

    <!-- Tempus Dominus CSS for Date Picker -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.39.0/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

</head>

<body>
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
        <a asp-controller="Home" asp-action="Index" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
            <img src="~/assets/img/logo.png" alt="Logo" style="height: 60px; width: auto; margin-right: 5px;">
            <h2 class="m-0 text-primary">MotorcycleForum</h2>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarResponsive">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ms-auto p-4 p-lg-0">
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index" class="nav-item nav-link text-uppercase">Home</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="#" asp-action="#" class="nav-item nav-link text-uppercase">About</a>
                </li>
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle text-uppercase" data-bs-toggle="dropdown">See more</a>
                    <ul class="dropdown-menu fade-up m-0">
                        <li><a asp-controller="#" asp-action="#" class="dropdown-item">Forum</a></li>
                        <li><a asp-controller="#" asp-action="#" class="dropdown-item">Marketplace</a></li>
                        <li><a asp-controller="#" asp-action="In#dex" class="dropdown-item">Event Calendar</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                </li>
            </ul>
            @await Html.PartialAsync("_LoginPartial")
        </div>
    </nav>


    <div class="container my-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-dark text-light py-3">
        <div class="container text-center">
            <p class="m-0"> &copy; 2024 MotorcycleForum | <a href="/Home/Privacy" class="text-light">Privacy</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        window.addEventListener('load', function () {
            document.getElementById('spinner').classList.remove('show');
        });

        $(document).on({
            ajaxStart: function () { $('#spinner').addClass('show'); },
            ajaxStop: function () { $('#spinner').removeClass('show'); }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
