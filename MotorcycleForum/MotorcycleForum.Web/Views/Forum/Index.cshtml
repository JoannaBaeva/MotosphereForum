@model List<ForumPostViewModel>
@{
    ViewData["Title"] = "Forum";
}

<div class="container py-5">
    <div class="bg-white rounded shadow p-4">
        <h1 class="text-dark mb-4 border-bottom pb-2 text-center">Forum</h1>

        <!-- Filter & Search -->
        <form method="get" class="mb-4">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fw-semibold text-dark">Filter by Topic</label>
                    <select class="form-select" id="TopicId" name="TopicId">
                        <option value="">-- Select a topic --</option>
                        @foreach (var topic in (ViewBag.Topics as List<SelectListItem> ?? new()))
                        {
                            var isSelected = topic.Value == ViewBag.TopicId?.ToString() ? "selected" : "";

                            <option value="@topic.Value" selected="@isSelected">@topic.Text</option>
                        }
                    </select>

                </div>
                <div class="col-md-8">
                    <label class="form-label fw-semibold text-dark">Search Posts</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for a post...">
                        <button class="btn btn-outline-dark" type="submit">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </div>
            </div>
        </form>

        <!-- Forum Post Cards -->
        <div class="row g-4">
            @foreach (var post in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title fw-bold text-dark">@post.Title</h5>
                            <p class="card-text text-muted">
                                <i class="bi bi-person-circle"></i> <strong>@post.CreatorName</strong><br />
                                <small><i class="bi bi-clock"></i> @post.CreatedDate.ToShortDateString()</small>
                            </p>
                            <div class="d-flex justify-content-between mt-3">
                                <span class="badge bg-success"><i class="bi bi-hand-thumbs-up-fill me-1"></i>@post.Upvotes</span>
                                <span class="badge bg-danger"><i class="bi bi-hand-thumbs-down-fill me-1"></i>@post.Downvotes</span>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-top-0 text-center">
                            <a href="@Url.Action("Details", "Forum", new { id = post.ForumPostId })" class="btn btn-outline-dark btn-sm px-4">
                                <i class="bi bi-eye"></i> View
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .btn:hover {
        opacity: 0.9;
        transform: scale(1.02);
        transition: all 0.2s ease-in-out;
    }
</style>
    