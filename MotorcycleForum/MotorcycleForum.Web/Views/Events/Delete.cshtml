@model Event

@{
    ViewData["Title"] = "Delete Event";
}

<div class="py-5 container">
    <div class="bg-white p-5 animate__animated animate__fadeInUp rounded shadow-lg">

        <h2 class="text-danger fw-bold mb-4 border-bottom pb-2">
            <i class="bi bi-trash"></i> Confirm Deletion
        </h2>

        <p>Are you sure you want to delete the event:</p>

        <h4 class="text-dark">@Model.Title</h4>
        <p><i class="bi bi-calendar-event"></i> @Model.EventDate.Value.ToString("dd/MM/yyyy HH:mm")</p>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="EventId" />

            <div class="mt-4 d-flex gap-3">
                <a asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>

                <button type="submit" class="btn btn-danger fw-bold">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
            </div>
        </form>
    </div>
</div>