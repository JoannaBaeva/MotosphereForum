@model AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="py-5 container">
    <h1 class="text-light border-bottom border-danger pb-2 mb-4 fw-bold bi bi-tools"> Admin Control Panel</h1>

    <!-- Overview Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card bg-light animate__animated animate__fadeInUp h-100 border-0 text-center shadow">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title text-dark mb-3 bi bi-people-fill"> Users</h5>
                    <p class="fs-2 fw-bold text-danger">@Model.TotalUsers</p>
                    <a asp-controller="Admin" asp-action="BanUsers" class="btn btn-outline-danger btn-sm">Manage Users</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-light animate__animated animate__fadeInUp h-100 border-0 text-center shadow">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title text-dark mb-3 bi-chat-fill"> Forum Posts</h5>
                    <p class="fs-2 fw-bold text-danger">@Model.ForumPostsCount</p>
                    <a asp-controller="Forum" asp-action="Index" class="btn btn-outline-danger btn-sm bi"> Go to Forum</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-light animate__animated animate__fadeInUp h-100 border-0 text-center shadow">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title text-dark mb-3 bi bi-shop"> Listings</h5>
                    <p class="fs-2 fw-bold text-danger">@Model.MarketplaceListingsCount</p>
                    <a asp-controller="Marketplace" asp-action="Index" class="btn btn-outline-danger btn-sm"> View Listings</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-light animate__animated animate__fadeInUp h-100 border-0 text-center shadow">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title text-dark mb-3 bi bi-calendar"> Events</h5>
                    <p class="fs-2 fw-bold text-danger">@Model.EventsCount</p>
                    <a asp-controller="Events" asp-action="Index" class="btn btn-outline-danger btn-sm">Manage Events</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Tools -->
    <div class="card bg-light rounded-4 animate__animated animate__fadeIn shadow-lg">
        <div class="card-body p-5">
            <h4 class="fw-bold text-dark mb-4">🔧 Quick Admin Tools</h4>

            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                <div class="col">
                    <a asp-controller="Admin" asp-action="CreateModerator" class="btn btn-danger w-100 text-start">
                        <i class="bi bi-shield-lock-fill me-2"></i> Manage Moderators
                    </a>
                </div>

                <div class="col">
                    <a asp-controller="Admin" asp-action="BanUsers" class="btn btn-outline-dark w-100 text-start">
                        <i class="bi bi-person-x-fill me-2"></i> Ban Users
                    </a>
                </div>

                <div class="col">
                    <a asp-controller="Admin" asp-action="ApproveEvents" class="btn btn-outline-dark w-100 text-start">
                        <i class="bi bi-calendar-check me-2"></i> Approve Events
                    </a>
                </div>

                <div class="col">
                    <a asp-controller="Admin" asp-action="CreateForumTopic" class="btn btn-outline-dark w-100 text-start">
                        <i class="bi bi-plus-circle me-2"></i> Create Forum Topic
                    </a>
                </div>

                <div class="col">
                    <a asp-controller="Admin" asp-action="CreateMarketplaceCategory" class="btn btn-outline-dark w-100 text-start">
                        <i class="bi bi-bag-plus me-2"></i> Create Marketplace Category
                    </a>
                </div>

                <div class="col">
                    <a asp-controller="Admin" asp-action="CreateEventCategory" class="btn btn-outline-dark w-100 text-start">
                        <i class="bi bi-calendar-plus me-2"></i> Create Event Category
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>
