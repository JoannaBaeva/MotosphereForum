@model AdminDashboardViewModel

@{
    ViewData["Title"] = "Moderator Dashboard";
}

<div class="py-5 container">
    <h1 class="text-light border-bottom border-danger pb-2 mb-4 fw-bold bi bi-tools"> Mod Control Panel</h1>

    <!-- Overview Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card bg-light animate__animated animate__fadeInUp h-100 border-0 text-center shadow">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title text-dark mb-3 bi bi-people-fill"> Users</h5>
                    <p class="fs-2 fw-bold text-danger">@Model.TotalUsers</p>
                    <a href="/Admin/BanUsers" class="btn btn-outline-danger btn-sm">Manage Users</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-light animate__animated animate__fadeInUp h-100 border-0 text-center shadow">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title text-dark mb-3 bi-chat-fill"> Forum Posts</h5>
                    <p class="fs-2 fw-bold text-danger">@Model.ForumPostsCount</p>
                    <a href="/Forum" class="btn btn-outline-danger btn-sm bi"> Go to Forum</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-light animate__animated animate__fadeInUp h-100 border-0 text-center shadow">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title text-dark mb-3 bi bi-shop"> Listings</h5>
                    <p class="fs-2 fw-bold text-danger">@Model.MarketplaceListingsCount</p>
                    <a href="/Marketplace" class="btn btn-outline-danger btn-sm"> View Listings</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-light animate__animated animate__fadeInUp h-100 border-0 text-center shadow">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title text-dark mb-3 bi bi-calendar"> Events</h5>
                    <p class="fs-2 fw-bold text-danger">@Model.EventsCount</p>
                    <a href="/Events" class="btn btn-outline-danger btn-sm">Manage Events</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Tools -->
    <div class="card bg-light rounded-4 animate__animated animate__fadeIn shadow-lg">
        <div class="card-body p-5">
            <h4 class="fw-bold text-dark mb-4">🔧 Quick Mod Tools</h4>

                <div class="col">
                    <a href="/Admin/BanUsers" class="btn btn-outline-dark w-100 text-start">
                        <i class="bi bi-person-x-fill me-2"></i> Ban Users
                    </a>
                </div>

                <div class="col">
                    <a href="/Admin/ApproveEvents" class="btn btn-outline-dark w-100 text-start">
                        <i class="bi bi-calendar-check me-2"></i> Approve Events
                    </a>
                </div>

                <div class="col">
                    <a href="/Admin/CreateForumTopic" class="btn btn-outline-dark w-100 text-start">
                        <i class="bi bi-plus-circle me-2"></i> Create Forum Topic
                    </a>
                </div>

                <div class="col">
                    <a href="/Admin/CreateMarketplaceCategory" class="btn btn-outline-dark w-100 text-start">
                        <i class="bi bi-bag-plus me-2"></i> Create Marketplace Category
                    </a>
                </div>

                <div class="col">
                    <a href="/Admin/CreateEventCategory" class="btn btn-outline-dark w-100 text-start">
                        <i class="bi bi-calendar-plus me-2"></i> Create Event Category
                    </a>
                </div>

            </div>
        </div>
    </div>


@section Scripts {
    @if (TempData["MarketplaceCategoryCreated"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Category Created!',
                text: '@TempData["MarketplaceCategoryCreated"]',
                confirmButtonColor: '#d81324',
                timer: 2000,
                showConfirmButton: false,
                timerProgressBar: true
            });
        </script>
    }

    @if (TempData["EventCategoryCreated"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Category Created!',
                text: '@TempData["EventCategoryCreated"]',
                confirmButtonColor: '#d81324',
                timer: 2000,
                showConfirmButton: false,
                timerProgressBar: true
            });
        </script>
    }

    @if (TempData["ForumTopicCreated"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Category Created!',
                text: '@TempData["ForumTopicCreated"]',
                confirmButtonColor: '#d81324',
                timer: 2000,
                showConfirmButton: false,
                timerProgressBar: true
            });
        </script>
    }
}

