@{
    ViewData["Title"] = "Moderator Panel";
}

<div class="container py-5">
    <h1 class="text-white fw-bold mb-4">🛡️ Moderator Dashboard</h1>

    <!-- Quick Overview -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card text-center border-0 shadow-sm bg-light">
                <div class="card-body">
                    <h5 class="card-title text-dark">Pending Posts</h5>
                    <p class="fs-4 fw-bold text-danger">6</p>
                    <a href="/Forum/ModerationQueue" class="btn btn-outline-danger btn-sm">Review Posts</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center border-0 shadow-sm bg-light">
                <div class="card-body">
                    <h5 class="card-title text-dark">Marketplace Listings</h5>
                    <p class="fs-4 fw-bold text-danger">+120</p>
                    <a href="/Marketplace" class="btn btn-outline-danger btn-sm">Manage Listings</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center border-0 shadow-sm bg-light">
                <div class="card-body">
                    <h5 class="card-title text-dark">Events</h5>
                    <p class="fs-4 fw-bold text-danger">Upcoming: 3</p>
                    <a href="/Events" class="btn btn-outline-danger btn-sm">Add / Remove Events</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Moderator Tools -->
    <div class="card border-0 shadow-lg bg-light rounded-4">
        <div class="card-body p-4">
            <h4 class="fw-bold mb-3 text-dark">🛠️ Moderator Actions</h4>
            <div class="row row-cols-1 row-cols-md-3 g-3">
                <div class="col">
                    <a href="/Forum/CreateTopic" class="btn btn-outline-dark w-100 text-start">
                        <i class="bi bi-plus-circle me-2"></i> Create Forum Topic
                    </a>
                </div>
                <div class="col">
                    <a href="/Moderator/Users" class="btn btn-outline-dark w-100 text-start">
                        <i class="bi bi-person-fill-gear me-2"></i> Moderate Users
                    </a>
                </div>
                <div class="col">
                    <a href="/Forum/AllPosts" class="btn btn-outline-dark w-100 text-start">
                        <i class="bi bi-postcard me-2"></i> Manage All Posts
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
